{
    "version": "2.0.0",
    "tasks": [{
        "label": "Compile",
        "command": "C:/MyWin/Environment/mingw64/bin/gcc.exe",
        "args": [
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}.exe",
            "-g",
            "-Wall",
            "-static-libgcc",
            "-fexec-charset=GBK"

        ],
        "type": "process",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        }

    }]
}